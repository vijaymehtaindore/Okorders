<p id="notice"><%= notice %></p>
<% if alert.present? %>
	<p id="alert" class="field_with_errors"><%= alert %></p>
<% end %>
<h1><%= "Question Title: #{@question.question_name}" %></h1>
<h3><%= "Question created by: #{@question.user.email}" %></h3>
<%= link_to 'follow User', follow_user_question_path(@question), class: 'follow_user' %>
<%= link_to 'follow topic', follow_topic_question_path(@question), class: 'follow_topic' %>
<br/>
<% @question.answers.each do |answer| %>
	<span class="answer"><%= answer.given_answer %></span>
<% end %>
<%= link_to 'Back', questions_path %>
